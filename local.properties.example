## This is an example configuration file.
# Copy this file to local.properties and fill in your values.
# local.properties is gitignored and will not be committed.

# Android SDK location (auto-generated by Android Studio)
sdk.dir=/path/to/android/sdk

# Luma API Configuration
# Get your API key from: https://lu.ma/developer
# Requires Luma Plus subscription
LUMA_API_KEY=your-api-key-here

# Your Luma Event ID
# Find this in your event URL: https://lu.ma/your-event-id
LUMA_EVENT_ID=evt-your-event-id-here

# Backend API Configuration
# Base URL for your backend API (without trailing slash)
BACKEND_API_URL=http://localhost:8000

# Backend API Bearer Token
# Get this from your backend API authentication
BACKEND_API_TOKEN=your-bearer-token-here

# Admin Screen Password
# Password required to access the Admin screen
ADMIN_PASSWORD=22012022

# Demo Mode Configuration
# Set to true to display demo user data instead of actual scanned user data
DEMO_MODE=false

# Demo user information (only used when DEMO_MODE=true)
DEMO_USERNAME=Demo User
DEMO_EMAIL=demo@example.com
